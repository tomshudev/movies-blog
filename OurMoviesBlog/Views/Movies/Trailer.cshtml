@model OurMoviesBlog.Models.Movie

<div class="container read-more">
    @Html.ActionLink("Back to List", "Index")
</div>

@if (!string.IsNullOrEmpty(Model.TrailerPath))
{
    <h2 style="text-align:center;">@Model.Name trailer</h2>
}
else
{
    <h2 style="text-align:center;">Trailer of @Model.Name was not found!</h2>
}

<div class="mul-col-blue container text-center">
    <section id="videoContainer" style="width: 700px;">
        <!-- Introduction -->
        @if (!string.IsNullOrEmpty(Model.TrailerPath))
        {
            <iframe width="600" height="315" src="@Url.Content("https://www.youtube.com/embed/" + Model.TrailerPath)" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        }
        else
        {
            <video width="700" controls>
                <source src="@Url.Content("~/media/videos/globusMax.mp4")" type="video/mp4">
            </video>
        }
    </section>
</div>